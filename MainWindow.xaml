<Window x:Class="ShaderBaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShaderBaker"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        mc:Ignorable="d"
        Title="Shader Baker" Height="350" Width="650">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" AcceptsReturn="True" TextWrapping="Wrap" FontFamily="Courier New" Background="#FF222222" Foreground="AntiqueWhite" FontSize="14" Text="#version 330&#xA;&#xA;out vec4 FragColor;&#xA;&#xA;void main()&#xA;{&#xA;    FragColor = vec4(1.0, 0.0, 0.0, 1.0);&#xA;}&#xA;"/>
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>
        <sharpGL:OpenGLControl Grid.Column="2" OpenGLDraw="OpenGLControl_OpenGLDraw"/>
    </Grid>
</Window>
