<Window x:Class="ShaderBaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ShaderBaker"
        xmlns:vm="clr-namespace:ShaderBaker.ViewModel"
        xmlns:vw="clr-namespace:ShaderBaker.View"
        Title="Shader Baker" Height="350" Width="850">
    <Window.DataContext>
        <vm:ProgramRendererViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <vw:ShaderTextView Grid.Row="0"
                               Grid.Column="0"                
                               ShaderText="{Binding VertexShaderSource}"/>
            <GridSplitter Grid.Row="0"
                          Grid.Column="1"
                          Grid.RowSpan="3"
                          HorizontalAlignment="Stretch"
                          ResizeBehavior="PreviousAndNext"/>
            <vw:ProgramRendererView Grid.Row="0"
                                    Grid.Column="2"
                                    Grid.RowSpan="2"/>
            <GridSplitter Grid.Row="0"
                          Grid.Column="3"
                          Grid.RowSpan="3"
                          HorizontalAlignment="Stretch"
                          ResizeBehavior="PreviousAndNext"/>
            <vw:ShaderTextView Grid.Row="0"
                               Grid.Column="4"
                               ShaderText="{Binding FragmentShaderSource}"/>
            <GridSplitter Grid.Row="1"
                          Grid.Column="0"
                          Grid.ColumnSpan="5"
                          HorizontalAlignment="Stretch"
                          ResizeBehavior="PreviousAndNext"/>
            <vw:StatusMessageView Grid.Row="2"
                                 Grid.Column="0"
                                 StatusMessage="{Binding VertexCompileStatus}"/>
            <vw:StatusMessageView Grid.Row="2"
                                 Grid.Column="2"
                                 StatusMessage="{Binding ProgramLinkStatus}"/>
            <vw:StatusMessageView Grid.Row="2"
                                 Grid.Column="4"
                                 StatusMessage="{Binding FragmentCompileStatus}"/>
        </Grid>
    </DockPanel>
</Window>
