<UserControl x:Class="ShaderBaker.View.ShaderTextView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ShaderBaker.ViewModel">
    <TextBox Grid.Column="0" AcceptsReturn="True" TextWrapping="Wrap" FontFamily="Courier New" Background="#FF222222" Foreground="#FFFAEBD7" FontSize="14" Text="{Binding VertexShaderSource, UpdateSourceTrigger=PropertyChanged}"/>
</UserControl>
