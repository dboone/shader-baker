<UserControl x:Class="ShaderBaker.View.StatusMessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ShaderBaker.View">
    <UserControl.Resources>
        <local:StatusMessageColorConverter x:Key="StatusMessageColorConverter"/>
        <local:StatusMessageTextConverter x:Key="StatusMessageTextConverter"/>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <TextBox AcceptsReturn="True"
                 AcceptsTab="True"
                 FontFamily="Courier New"
                 Background="#FF222222"
                 Foreground="{Binding StatusMessage, Converter={StaticResource StatusMessageColorConverter}}"
                 FontSize="14"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 Text="{Binding StatusMessage, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StatusMessageTextConverter}}"
                 IsReadOnly="True"/>
    </Grid>
</UserControl>
